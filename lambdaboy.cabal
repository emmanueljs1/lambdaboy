      base >=4.7 && <5
    , array
    , mtl
  default-language: Haskell2010

executable lambdaboy-exe
  main-is: Main.hs
  other-modules:
      Paths_lambdaboy
  hs-source-dirs:
      app
  default-extensions:
    TypeApplications
  ghc-options: -threaded -rtsopts -with-rtsopts=-N
  build-depends:
      base >=4.7 && <5
    , array
    , lambdaboy
  default-language: Haskell2010

test-suite lambdaboy-test
  type: exitcode-stdio-1.0
  main-is: Spec.hs
  other-modules:
      CPUTests
      Paths_lambdaboy
  hs-source-dirs:
      test
  default-extensions:
      GADTs
      DataKinds
      TypeFamilies
      StandaloneDeriving
      ConstraintKinds
      TypeOperators
      RankNTypes
      PolyKinds
      TypeApplications
      ScopedTypeVariables
      FlexibleContexts
      AllowAmbiguousTypes
      FlexibleInstances
  ghc-options: -threaded -rtsopts -with-rtsopts=-N
