    README.md
    ChangeLog.md

source-repository head
  type: git
  location: https://github.com/emmanueljs1/lambdaboy

library
  exposed-modules:
      Gameboy
      Instruction
      Operand
      Registers
      CPU
  hs-source-dirs:
      src
  default-extensions:
      GADTs
      DataKinds
      TypeFamilies
      StandaloneDeriving
      ConstraintKinds
      TypeOperators
      RankNTypes
      PolyKinds
      TypeApplications
      ScopedTypeVariables
      FlexibleContexts
      AllowAmbiguousTypes
      FlexibleInstances
